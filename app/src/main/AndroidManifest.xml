        <activity android:name=".activity.TestActivity">
        </activity>

        <activity android:name=".main.WelcomePage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".main.LoginActivity">

        </activity>

        <activity android:name=".activity.AddAccountActivity"/>

        <activity android:name=".activity.MailDetailActivity"/>

        <activity android:name=".activity.WriteActivity"/>

        <activity android:name=".activity.SignatureActivity"/>

        <activity android:name=".activity.SenderNameActivity"/>

        <activity android:name=".activity.FeedbackActivity"/>

